<resources>

    <style name="XSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <!-- 分隔线颜色 -->
        <item name="android:divider">#DFDFDF</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:dropDownListViewStyle">@style/XSpinnerStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullScreenTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <declare-styleable name="AlbumSelectGridView">
        <attr name="sapce_size" format="dimension" />
        <attr name="single_image_size" format="dimension" />
        <attr name="single_image_ratio" format="float" />
        <attr name="column_count" format="integer" />
        <attr name="max_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="SpinnerTextView">
        <attr name="IsDropDown" format="boolean" />
    </declare-styleable>

    <style name="SpinnerArrayStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_array_selector</item>
    </style>

</resources>
